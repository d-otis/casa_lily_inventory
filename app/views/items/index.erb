


<div class="col-sm-6 offset-sm-3">

	<% if flash.has?(:message) %>

	<div class="alert alert-secondary" role="alert">
		<%= flash[:message] %>
	</div>

	<% end %>

	<div class="list-group">
		<% @items.each do |item| %>
		<a href="/items/<%= item.slug %>" class="list-group-item list-group-item-action"><%= item.name %> // <%= item.locations.collect {|location| "#{location.name}"}.join(", ") %></a>
		<% end %>
	</div>
</div>