<div class="col-sm-8 offset-sm-2">
	<form action="/locations/<%= @location.slug %>" method="POST">
		<input type="hidden" name="_method" value="PATCH">
		<div class="form-row">
			<div class="col-sm-12">
				<div class="form-group">
					<label for="location_name"><h3>Location Name</h3></label>
					<input type="text" name="location[name]" class="form-control" id="location_name" value="<%= @location.name %>">
				</div>
			</div>
		</div>

		
<% @items.each.with_index(1) do |item, index| %>
		<div class="form-row mb-2 <%#= 'bg-secondary text-light' if index.odd? %>">
<%# --------------- item_count --------------- %>
			<div class="form-group col-sm-6">
				<label id="<%= item.slug %>_count_label" class="" for="<%= item.slug %>_count"><strong><%= item.name %></strong> Count</label>
				<input type="number" class="form-control" id="<%= item.slug %>_count" value="<%= item.item_count(@location) %>" name="location_items[][<%= item.li_id(item.id, @location.id) if item.li_id(item.id, @location.id)  %>][item_count]" <%= 'disabled' if !@location.item_ids.include?(item.id) %> step="any">
			</div>
<%# --------------- item_par --------------- %>			
			<div class="form-group col-sm-6">
				<label for="<%= item.slug %>_par" class=""><strong><%= item.name %></strong> PAR</label>
				<input id="<%= item.slug %>_par" type="number" class="form-control" value="<%= item.item_par(@location) %>" name="location_items[][<%= item.li_id(item.id, @location.id) if item.li_id(item.id, @location.id) %>][item_par]" <%= 'disabled' if !@location.item_ids.include?(item.id) %> step="any">
			</div>
		</div>
<% end %>

		<br>
		<input type="submit" class="btn btn-primary" value="Save">
	</form>
</div>

