<div class="col-sm-8 offset-sm-2">
	<form action="/locations/<%= @location.slug %>" method="POST">
		<input type="hidden" name="_method" value="PATCH">
		<div class="form-row">
			<div class="col-sm-12">
				<div class="form-group">
					<label for="location_name">Location Name</label>
					<input type="text" name="location[name]" class="form-control" id="location_name" value="<%= @location.name %>">
				</div>
			</div>
		</div>

		
<% @items.each do |item| %>
		<div class="form-row mb-2">
<%# --------------- item_count --------------- %>
			<div class="form-group col-sm-6">
				<label class="" for="<%= item.name %>_count"><strong><%= item.name %></strong> Count</label>
				<input type="number" class="form-control" id="<%= item.name %>_count" value="<%= item.item_count(@location) %>" name="location_items[][<%= item.li_id(item.id, @location.id) if item.li_id(item.id, @location.id)  %>][item_count]" <%= 'disabled' if !@location.item_ids.include?(item.id) %> step="any">
			</div>
<%# --------------- item_par --------------- %>			
			<div class="form-group col-sm-6">
				<label for="" class=""><%# item.name %> Par</label>
				<input type="number" class="form-control" value="<%= item.item_par(@location) %>" name="location_items[][<%= item.li_id(item.id, @location.id) if item.li_id(item.id, @location.id) %>][item_par]" <%= 'disabled' if !@location.item_ids.include?(item.id) %> step="any">
			</div>
		</div>
<% end %>

		<br>
		<input type="submit" class="btn btn-primary" value="Save">
	</form>
</div>

